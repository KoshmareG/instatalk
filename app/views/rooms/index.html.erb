<%= turbo_stream_from :rooms %>
<div class="card">
  <div class="card-body">
    <h2><%= t('rooms.rooms') %></h2>
    <div class="mt-3">
      <%= render 'rooms/form', room: @room %>
    </div>
    <p id="notice"><%= notice %></p>
    <%= turbo_frame_tag :rooms do %>
      <div class="list-group">
        <%= render @rooms %>
      </div>
    <% end %>
  </div>
</div>
