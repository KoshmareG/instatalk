<%= turbo_stream_from :rooms %>
<div class="card mb-3">
  <div class="card-body">
    <h3><%= t('users.users_online') %></h3>
    <div class="row row-cols-md-5 row-cols-3" id="users-online">
      <%= render partial: 'users/user', collection: @users_online %>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-body">
    <h3><%= t('rooms.rooms') %></h3>
    <div class="mt-3 mb-3">
      <%= render 'rooms/form', room: @room %>
    </div>
    <div class="list-group">
      <%= turbo_frame_tag :rooms do %>
        <%= render @rooms %>
      <% end %>
    </div>
  </div>
</div>
